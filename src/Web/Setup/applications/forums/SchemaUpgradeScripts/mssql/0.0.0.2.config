CREATE PROCEDURE [dbo].[cy_Forums_DeleteBySite]

/*
Author:				Joe Audette
Created:			2008-11-12
Last Modified:		2008-11-12

*/

@SiteID			int

AS

DELETE FROM cy_ForumPosts
WHERE ThreadID IN (SELECT ThreadID FROM cy_ForumThreads WHERE ForumID IN
(SELECT ItemID FROM cy_Forums WHERE ModuleID IN  (SELECT ModuleID FROM cy_Modules WHERE SiteID = @SiteID)) )

DELETE FROM cy_ForumThreadSubscriptions
WHERE ThreadID IN (SELECT ThreadID FROM cy_ForumThreads WHERE ForumID IN
(SELECT ItemID FROM cy_Forums WHERE ModuleID IN  (SELECT ModuleID FROM cy_Modules WHERE SiteID = @SiteID)) )

DELETE FROM cy_ForumThreads
WHERE ForumID IN
(SELECT ItemID FROM cy_Forums WHERE ModuleID IN  
(SELECT ModuleID FROM cy_Modules WHERE SiteID = @SiteID)) 

DELETE FROM cy_ForumSubscriptions
WHERE ForumID IN
(SELECT ItemID FROM cy_Forums WHERE ModuleID IN  
(SELECT ModuleID FROM cy_Modules WHERE SiteID = @SiteID)) 

DELETE FROM cy_Forums
WHERE ModuleID IN (SELECT ModuleID FROM cy_Modules WHERE SiteID = @SiteID)

GO

