CREATE PROCEDURE [dbo].[cy_CommerceReport_GetSalesGroupedByUser]

/*
Author:   			Joe Audette
Created: 			2009-02-14
Last Modified: 		2009-02-14
*/

@SiteGuid uniqueidentifier

AS


SELECT TOP 20
c.UserGuid,
u.UserID,
COALESCE(u.[Name], 'deleted user') AS Name,
u.LoginName,
u.Email,

	SUM(c.SubTotal) As Sales
		
FROM
		[dbo].[cy_CommerceReport] c

LEFT OUTER JOIN [dbo].[cy_Users] u
ON	c.UserGuid = u.UserGuid
		
WHERE
		c.[SiteGuid] = @SiteGuid

GROUP BY 
c.UserGuid,
u.UserID,
u.[Name],
u.LoginName,
u.Email

ORDER BY SUM(SubTotal) desc

GO

