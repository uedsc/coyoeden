CREATE PROCEDURE [dbo].[cy_CommerceReport_SelectUserItemPage]

-- Author:   			Joe Audette
-- Created: 			2009-02-14
-- Last Modified: 		2009-02-14

@SiteGuid uniqueidentifier,
@PageNumber 			int,
@PageSize 			int

AS

DECLARE @PageLowerBound int
DECLARE @PageUpperBound int


SET @PageLowerBound = (@PageSize * @PageNumber) - @PageSize
SET @PageUpperBound = @PageLowerBound + @PageSize + 1



CREATE TABLE #PageIndex 
(
	IndexID int IDENTITY (1, 1) NOT NULL,
RowGuid UniqueIdentifier
)

BEGIN

INSERT INTO #PageIndex ( 
RowGuid
)

SELECT 
		c.[UserGuid]
		
FROM
		[dbo].[cy_CommerceReport] c

LEFT OUTER JOIN [dbo].[cy_Users] u
ON	c.UserGuid = u.UserGuid
		
WHERE c.SiteGuid = @SiteGuid

GROUP BY u.[Name], c.UserGuid

ORDER BY u.[Name]

END


SELECT

t1.UserGuid,
COALESCE(u.UserID, -1) AS UserID,
COALESCE(u.[Name], 'deleted user') AS [Name],
u.LoginName,
u.Email,
SUM(t1.SubTotal) AS Revenue
		
FROM
		[dbo].[cy_CommerceReport] t1

JOIN			#PageIndex t2
ON			
		t1.[UserGuid] = t2.[RowGuid]

LEFT OUTER JOIN [dbo].[cy_Users] u
ON	t1.UserGuid = u.UserGuid
		
WHERE
		t2.IndexID > @PageLowerBound 
		AND t2.IndexID < @PageUpperBound

GROUP BY 
t1.UserGuid,
u.UserID,
u.[Name],
u.LoginName,
u.Email

		
ORDER BY u.[Name]

DROP TABLE #PageIndex


GO


SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO


