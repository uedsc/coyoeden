CREATE PROCEDURE [dbo].[cy_LetterSubscribe_SelectPage]

-- Author:   			Joe Audette
-- Created: 			2009-10-11
-- Last Modified: 		2009-10-11

@LetterInfoGuid			uniqueidentifier,
@PageNumber 			int,
@PageSize 			int

AS

DECLARE @PageLowerBound int
DECLARE @PageUpperBound int


SET @PageLowerBound = (@PageSize * @PageNumber) - @PageSize
SET @PageUpperBound = @PageLowerBound + @PageSize + 1

CREATE TABLE #PageIndex 
(
	IndexID int IDENTITY (1, 1) NOT NULL,
[Guid] uniqueidentifier
)

BEGIN

INSERT INTO #PageIndex ( 
[Guid]
)

SELECT
		ls.[Guid]
		
FROM
		[dbo].[cy_LetterSubscribe] ls

LEFT OUTER JOIN		cy_Users u
ON		ls.UserGuid = u.UserGuid
		
WHERE		ls.[LetterInfoGuid] = @LetterInfoGuid

ORDER BY	u.[Name]

END



SELECT
		t1.*,
		COALESCE(u.[Name], t1.[Email]) As [Name],
		u.[Email] As UserEmail
		
FROM
		[dbo].[cy_LetterSubscribe] t1
		
LEFT OUTER JOIN		cy_Users u
ON		t1.UserGuid = u.UserGuid

JOIN			#PageIndex t2
ON			
		t1.[Guid] = t2.[Guid]
		
WHERE
		t2.IndexID > @PageLowerBound 
		AND t2.IndexID < @PageUpperBound
		
ORDER BY t2.IndexID

DROP TABLE #PageIndex
GO

