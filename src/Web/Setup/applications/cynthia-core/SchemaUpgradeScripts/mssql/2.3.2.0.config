ALTER PROCEDURE [dbo].[cy_LetterInfo_UpdateSubscriberCount]

/*
Author:   			Joe Audette
Created: 			2008-01-07
Last Modified: 		2008-01-07
*/

@LetterInfoGuid uniqueidentifier

	
AS

UPDATE	[dbo].[cy_LetterInfo]
SET SubscriberCount = (SELECT COUNT(*) FROM [dbo].[cy_LetterSubscribe] WHERE LetterInfoGuid = @LetterInfoGuid)
WHERE LetterInfoGuid = @LetterInfoGuid


GO

INSERT INTO [dbo].cy_LetterSubscribe (SiteGuid, LetterInfoGuid, UserGuid, Email, IsVerified, VerifyGuid,BeginUtc, UseHtml )


SELECT
u.SiteGuid,
ls.LetterInfoGuid,
ls.UserGuid,
LOWER(u.Email),
1,
'00000000-0000-0000-0000-000000000000',
ls.BeginUTC,
ls.UseHtml


FROM
	[dbo].cy_LetterSubscriber ls
	
JOIN
	[dbo].cy_Users u
ON
	u.UserGuid = ls.UserGuid
	
