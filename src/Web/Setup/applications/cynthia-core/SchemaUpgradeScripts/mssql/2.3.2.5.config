ALTER PROCEDURE [dbo].[cy_LetterInfo_UpdateSubscriberCount]

/*
Author:   			Joe Audette
Created: 			2008-01-07
Last Modified: 		2008-01-07
*/

@LetterInfoGuid uniqueidentifier

	
AS

UPDATE	[dbo].[cy_LetterInfo]
SET SubscriberCount = (SELECT COUNT(*) FROM [dbo].[cy_LetterSubscribe] WHERE LetterInfoGuid = @LetterInfoGuid),
UnVerifiedCount = (SELECT COUNT(*) FROM [dbo].[cy_LetterSubscribe] WHERE LetterInfoGuid = @LetterInfoGuid AND IsVerified = 0)
WHERE LetterInfoGuid = @LetterInfoGuid



GO

