ALTER PROCEDURE [dbo].[cy_Modules_SelectByPage]

/*
Author:				Joe Audette
Created:			2004-12-26
Last Modified:		2009-12-24

*/

@PageID		int,
@CurrentTime dateTime


AS
SELECT  		m.*,
				pm.PageID,
				pm.ModuleOrder,
				pm.PaneName,
				pm.PublishBeginDate,
				pm.PublishEndDate,
				md.ControlSrc,
				md.FeatureName
    
FROM
    			cy_Modules m
  
INNER JOIN
    			cy_ModuleDefinitions md
ON 			m.ModuleDefID = md.ModuleDefID

INNER JOIN		cy_PageModules pm
ON				m.ModuleID = pm.ModuleID
    
WHERE   
    			pm.PageID = @PageID
				AND pm.PublishBeginDate <= @CurrentTime
				AND	(
					(pm.PublishEndDate IS NULL)
					OR
					(pm.PublishEndDate > @CurrentTime)
					)
		
    
ORDER BY
    			pm.ModuleOrder
    			



GO

