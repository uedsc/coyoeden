CREATE PROCEDURE [dbo].[cy_CommerceReport_GetItemRevenueBySite]

/*
Author:   			Joe Audette
Created: 			2009-01-30
Last Modified: 		2009-01-30
*/

@SiteGuid uniqueidentifier

AS


SELECT 
ModuleTitle,
ItemName,
ItemGuid,
SUM(Quantity) AS UnitsSold,
SUM(SubTotal) AS Revenue
		
FROM
	cy_CommerceReport
		
WHERE
		[SiteGuid] = @SiteGuid

